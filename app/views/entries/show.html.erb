<html>
<head>
	<title></title>
	  <link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.6.0/pure-min.css">
  <link rel="stylesheet" type="text/css" href="app/assets/stylesheets/application.css">
</head>
<body>

	<div class="entry_content">
		<p class="title"><%= @entry.title %></p>
			<p class="author">By: <%= @entry.author %></p>
			<p class="date"><%= @entry.created_at.strftime("%b. %d, %Y")  %></p>
			<p class="post"> <%= @entry.content %></p>
			<p class="date"> Submitted <%= time_ago_in_words(@entry.created_at)%> ago </p>
	<!-- only signed in users will see the Delete or Edit buttons -->
	<% if user_signed_in? %>
	<p> <%=button_to "Delete",entry_path(@entry.id), :method => :delete, :class => "delete"%> </p>
	<p><%= button_to 'Edit', edit_entry_path(@entry), :method => :get %><p>
	<% end %>

		<div id="comments">
			<h2 class="comment-header"><%= @entry.comments.count %> Comments</h2>
			<%= render @entry.comments %>

			<h3>Add a comment:</h3>
			<%= render "comments/form" %>
		</div>
	</div>

</body>
</html>
